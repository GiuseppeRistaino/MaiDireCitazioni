<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="33dip"
        android:layout_height="46dip"
        android:id="@+id/imageView_nota"
        android:layout_alignParentLeft="true"
        android:padding="4dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/note"/>

    <TextView
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView_nomeCitazione"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/button_preferences"
        android:layout_toStartOf="@+id/button_preferences" />

    <ImageButton
        android:id="@+id/button_preferences"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/imageView_nota"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="19dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="19dp"
        android:background="#66FFFFFF"
        android:src="@drawable/options"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/textView_nomeCitazione"
        android:layout_marginTop="10dp">

    </View>

</RelativeLayout>